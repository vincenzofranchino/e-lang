# Simulazione di particelle
class Particella
    fn __init__(x, y, velocita)
        self.x = x
        self.y = y
        self.velocita = velocita
    end
    
    fn aggiorna()
        self.x += self.velocita
    end
end

# Crea particelle e le usa
print("=== SIMULAZIONE PARTICELLE ===")
let p1 = new Particella(0, 0, 1)
let p2 = new Particella(5, 5, 2)

print("Particella 1 - Posizione iniziale:", p1.x)
print("Particella 2 - Posizione iniziale:", p2.x)

print()
print("Aggiorno le particelle...")
for i in range(1, 5)
    p1.aggiorna()
    p2.aggiorna()
    print("Step " + str(i) + " - P1:", p1.x, "| P2:", p2.x)
end